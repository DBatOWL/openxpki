<OxiBase::Button::Raw @button={{@button}} ...attributes>
    {{#if @button.tooltip}}
        <Tippy>{{@button.tooltip}}</Tippy>
    {{/if}}
    {{#if @button.image}}
        <img src={{@button.image}} alt="" role="presentation"/>
        <br/>
    {{/if}}
    {{#if @button.loading}}
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
    {{/if}}
    {{@button.label}}
</OxiBase::Button::Raw>
