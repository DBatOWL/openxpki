{{#let this.model.popup as |popup|}}
    <BsModal
        @open={{if popup true false}}
        @closeButton={{true}}
        @fade={{true}}
        @backdrop={{true}}
        @backdropClose={{false}}
        @size={{if popup.page.isLarge "xl" "lg"}}
        @scrollable={{true}}
        @onHidden={{this.closePopup}}
        as |Modal|
    >
        <Modal.header class="bg-secondary text-white">
            <h4 class="modal-title">
                {{if popup.page.shortlabel popup.page.shortlabel popup.page.label}}
            </h4>
        </Modal.header>
        <Modal.body>
            {{#each popup.main as |mainEntry|}}
                <OxiSection @content={{mainEntry}}/>
            {{/each}}
        </Modal.body>
        <Modal.footer class={{if this.popupBackButton "justify-content-start"}}>
            {{#if this.popupBackButton}}
                <BsButton
                    @type=""
                    class="btn-primary me-auto"
                    @onClick={{this.goBack}}
                >
                    <i class="glyphicon glyphicon-chevron-left"></i> {{t 'site.back'}}
                </BsButton>
            {{/if}}
            <BsButton {{on "click" Modal.close}}>{{t 'site.close_popup'}}</BsButton>
        </Modal.footer>
    </BsModal>
{{/let}}
