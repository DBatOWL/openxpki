<style type="text/css">
    .test-chart { border: solid 1px #aaa; margin: 3pt; }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <OxiSection @content={{this.chartDef1}}/>
        </div>
        <div class="col-md-3">
            <OxiSection @content={{this.chartDef2}}/>
        </div>
        <div class="col-md-3">
            <OxiSection @content={{this.chartDef3}}/>
        </div>
        <div class="col-md-3">
            <OxiSection @content={{this.chartDef4}}/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <OxiBase::Button @button={{hash format="expected" label="de-DE"}} @onClick={{fn this.setLang "de-DE"}}/>
            <OxiBase::Button @button={{hash format="expected" label="en-US"}} @onClick={{fn this.setLang "en-US"}}/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <OxiSection @content={{this.formDef}}/>
            <OxiSection @content={{this.gridDef}}/>
            <OxiSection @content={{this.keyvalueDef}}/>
        </div>
    </div>
</div>

