<style type="text/css">
    .test-chart { border: solid 1px #aaa; margin: 3pt; }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-body">
                    <OxiBase::Button @button={{hash format="expected" label="de-DE"}} @onClick={{fn this.setLang "de-DE"}}/>
                    <OxiBase::Button @button={{hash format="expected" label="en-US"}} @onClick={{fn this.setLang "en-US"}}/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-3">
                            <OxiSection @content={{this.chartDef1}}/>
                        </div>
                        <div class="col-lg-3">
                            <OxiSection @content={{this.chartDef2}}/>
                        </div>
                        <div class="col-lg-3">
                            <OxiSection @content={{this.chartDef3}}/>
                        </div>
                        <div class="col-lg-3">
                            <OxiSection @content={{this.chartDef4}}/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{#each this.forms as |form index|}}
                <OxiBase::Button
                    @button={{hash format="expected" label=form.content.title}}
                    @onClick={{fn this.setCurrentForm index}}
                />
            {{/each}}

            {{#each this.forms as |form index|}}
                {{#if (eq index this.selectedFormIndex) }}
                    <div class="panel panel-primary">
                        <div class="panel-heading"></div>
                        <div class="panel-body">
                            <OxiSection @content={{form}}/>
                        </div>
                    </div>
                {{/if}}
            {{/each}}

            {{#each this.sections as |sectionDef|}}
                <div class="panel panel-primary">
                    <div class="panel-heading"></div>
                    <div class="panel-body">
                        <OxiSection @content={{sectionDef}}/>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

